{
  "name": "Bookmarq",
  "description": "This is bookmark application",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "tabs", "scripting", "storage"],
  "background": {
    "service_worker": "worker.js",
    "type": "module"
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "content_scripts": [
    {
      "js": ["/scripts/login.js"],
      "matches": ["https://bookmarq-dev.vercel.app/auth/extension/*"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  }
}
